<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>

        <item name="multiSliderStyle">@style/Widget.MultiSlider</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowActionBar">false</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="Widget.MultiSlider" parent="android:Widget">

    </style>

    <style name="WhiteTextInputEditText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorControlActivated">@color/holo_blue_light</item>
        <item name="android:colorControlHighlight">@color/holo_blue_light</item>
    </style>

    <style name="BlackTextInputEditText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorControlActivated">@color/holo_red_light</item>
        <item name="android:colorControlHighlight">@color/holo_red_light</item>
    </style>


    <style name="WhiteHintTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/holo_blue_light</item>
    </style>

    <style name="BlackHintTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/holo_red_light</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
