<resources xmlns:tools="http://schemas.android.com/tools">

    <!--Components-->

    <!--Bottom Sheets-->
    <style name="ThemeOverlay.MyTheme.BottomSheetDialog" parent="ThemeOverlay.MaterialComponents.Dialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowAnimationStyle">@style/Animation.MyTheme.BottomSheet.Modal</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="bottomSheetStyle">@style/Widget.MyTheme.BottomSheet.Modal</item>
        <item name="android:navigationBarColor">?colorSurface</item>
        <item name="android:navigationBarDividerColor" tools:ignore="NewApi">@android:color/transparent</item>
    </style>
    <style name="Widget.MyTheme.BottomSheet.Modal" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="shapeAppearanceOverlay">?shapeAppearanceLargeComponent</item>
    </style>

    <!--Navigation Drawer-->
    <style name="Widget.MyTheme.NavigationView" parent="Widget.MaterialComponents.NavigationView">
        <item name="itemTextAppearance">?textAppearanceBody2</item>
    </style>

    <!-- Base application theme. -->


    <style name="Widget.MultiSlider" parent="android:Widget">

    </style>

    <style name="WhiteTextInputEditText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorControlActivated">@color/holo_blue_light</item>
        <item name="android:colorControlHighlight">@color/holo_blue_light</item>
    </style>

    <style name="BlackTextInputEditText" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:colorControlActivated">@color/holo_red_light</item>
        <item name="android:colorControlHighlight">@color/holo_red_light</item>
    </style>


    <style name="WhiteHintTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/holo_blue_light</item>
    </style>

    <style name="BlackHintTextAppearance" parent="TextAppearance.Design.Hint">
        <item name="android:textColor">@color/holo_red_light</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />



</resources>
