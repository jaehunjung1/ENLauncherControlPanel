<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context=".Controlpanel.Setting2Fragment">

    <LinearLayout
        android:id="@+id/search_mainBar"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:weightSum="12"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/serviceLinearLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/post_top_bar_background"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:background="@drawable/post_bottom_bar_background"
                    android:orientation="horizontal"
                    android:paddingStart="20dp"
                    android:paddingTop="15dp"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="WGB Filter Setting"
                        android:textColor="#6d5dff"
                        android:textSize="14dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_weight="0"
                    android:orientation="horizontal"
                    android:paddingStart="20dp"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Enhancement"
                        android:textColor="@color/text"
                        android:textSize="16dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_weight="0"
                    android:orientation="horizontal"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:visibility="visible">

                    <io.apptik.widget.MultiSlider
                        android:id="@+id/enhancementSeekbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:thumb="@drawable/seekbar_thumb"
                        app:drawThumbsApart="true"
                        app:rangeColor="@color/theme"
                        app:scaleMax="9"
                        app:scaleMin="0"
                        app:scaleStep="1"
                        app:thumbNumber="2"
                        app:trackColor="@color/seek_bar_background" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:orientation="horizontal"
                    android:paddingStart="20dp"
                    android:paddingTop="16dp"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Observation Window"
                        android:textColor="@color/text"
                        android:textSize="16dp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_weight="0"
                    android:orientation="horizontal"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:visibility="visible">

                    <io.apptik.widget.MultiSlider
                        android:id="@+id/observationWindowSeekbar"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:thumb="@drawable/seekbar_thumb"
                        app:drawThumbsApart="true"
                        app:rangeColor="@color/theme"
                        app:scaleMax="9"
                        app:scaleMin="0"
                        app:scaleStep="1"
                        app:thumbNumber="2"
                        app:trackColor="@color/seek_bar_background" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="0"
                    android:orientation="horizontal"
                    android:paddingStart="20dp"
                    android:paddingTop="16dp"
                    android:visibility="visible">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:focusableInTouchMode="false"
                        android:gravity="center_vertical"
                        android:text="Keyword"
                        android:textColor="@color/text"
                        android:textSize="16dp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="11dp"
                    android:layout_weight="0"
                    android:focusable="auto"
                    android:focusableInTouchMode="true"
                    android:orientation="vertical"
                    android:paddingStart="20dp"
                    android:paddingEnd="20dp"
                    android:visibility="visible">

                    <com.nex3z.flowlayout.FlowLayout
                        android:id="@+id/whiteFlowLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        app:flChildSpacing="5dp"
                        app:flChildSpacingForLastRow="5dp"
                        app:flRowSpacing="8dp"/>

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/white_keyword_text_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/holo_blue_light"
                        android:focusableInTouchMode="false"
                        android:hint="White List"
                        android:theme="@style/WhiteTextInputEditText"
                        app:hintTextAppearance="@style/WhiteHintTextAppearance">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/white_keyword_editText"
                            style="@style/WhiteTextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textSize="15sp" />

                    </android.support.design.widget.TextInputLayout>

                    <com.nex3z.flowlayout.FlowLayout
                        android:id="@+id/blackFlowLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        app:flChildSpacing="5dp"
                        app:flChildSpacingForLastRow="5dp"
                        app:flRowSpacing="8dp" />

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/black_keyword_text_input"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="9dp"
                        android:backgroundTint="@color/holo_red_light"
                        android:focusableInTouchMode="false"
                        android:hint="Black List"
                        android:theme="@style/BlackTextInputEditText"
                        app:hintTextAppearance="@style/BlackHintTextAppearance">

                        <android.support.design.widget.TextInputEditText
                            android:id="@+id/black_keyword_editText"
                            style="@style/BlackTextInputEditText"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:maxLines="1"
                            android:textSize="15sp" />

                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/doneLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@drawable/post_bottom_bar_background"
            android:orientation="vertical"
            android:paddingTop="7dp"
            app:layout_constraintHorizontal_bias="0.5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/next_textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Next"
                    android:textColor="@color/text"
                    android:textSize="16dp" />
            </LinearLayout>
        </LinearLayout>


        <LinearLayout
            android:id="@+id/cancelLinearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@drawable/post_bottom_bar_background"
            android:orientation="vertical"
            android:paddingTop="16dp"
            app:layout_constraintHorizontal_bias="0.5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginStart="16dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/prev_textView"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="4dp"
                    android:layout_weight="1"
                    android:gravity="center_vertical"
                    android:text="Prev"
                    android:textColor="@color/text"
                    android:textSize="16dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>