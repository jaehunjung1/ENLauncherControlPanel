<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app = "http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    style="@style/Widget.MaterialComponents.CardView"
    android:layout_margin="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/item_recycler_view_background"
            android:padding="10dp">

            <ImageView
                android:id="@+id/recycler_item_imageview"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:scaleType="fitXY"
                android:src="@drawable/kakaotalk_logo" />

            <TextView
                android:id="@+id/recycler_item_textview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/TextAppearance.MyTheme.Button"
                android:gravity="center"
                android:text="Image"
                android:textColor="#000"
                android:textSize="13sp" />
        </LinearLayout>

</androidx.cardview.widget.CardView>
