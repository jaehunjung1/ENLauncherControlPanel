<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="Importance Pattenrs"
                android:textSize="14sp" />

            <kr.ac.snu.hcil.enlaunchercontrolpanel.examplecomponentselection.ComponentExampleSelectionView
                android:id="@+id/importance_pattern_examples"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="Layouts"
                android:textSize="14sp" />

            <kr.ac.snu.hcil.enlaunchercontrolpanel.examplecomponentselection.ComponentExampleSelectionView
                android:id="@+id/layout_examples"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="Independent Notification Effects"
                android:textSize="14sp" />

            <kr.ac.snu.hcil.enlaunchercontrolpanel.examplecomponentselection.ComponentExampleSelectionView
                android:id="@+id/indpendent_effect_examples"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:text="Aggregated Notification Effects"
                android:textSize="14sp" />

            <kr.ac.snu.hcil.enlaunchercontrolpanel.examplecomponentselection.ComponentExampleSelectionView
                android:id="@+id/aggregated_effect_examples"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />


        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>