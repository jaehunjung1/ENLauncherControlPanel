<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Controlpanel.Setting3Fragment">

    <ScrollView
        android:id="@+id/fragment3_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:weightSum="12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.alespero.expandablecardview.ExpandableCardView
                android:id="@+id/halo_layout_cardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:title="Halo Layout"
                app:inner_view="@layout/halo_layout_card_view"
                app:expandOnClick="true"
                app:animationDuration="200"
                app:startExpanded="false"/>

            <com.alespero.expandablecardview.ExpandableCardView
                android:id="@+id/independent_vis_cardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:animationDuration="200"
                app:expandOnClick="true"
                app:inner_view="@layout/layout_card_view"
                app:startExpanded="false"
                app:title="Independent Visual Effect" />

            <com.alespero.expandablecardview.ExpandableCardView
                android:id="@+id/aggregated_vis_cardview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                app:animationDuration="200"
                app:expandOnClick="true"
                app:inner_view="@layout/layout_card_view"
                app:startExpanded="false"
                app:title="Aggregated Visual Effect" />

            <LinearLayout
                android:id="@+id/doneLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/post_bottom_bar_background"
                android:orientation="vertical"
                android:paddingTop="7dp"
                app:layout_constraintHorizontal_bias="0.5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/next_textView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Next"
                        android:textColor="@color/text"
                        android:textSize="16dp" />
                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/cancelLinearLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0"
                android:background="@drawable/post_bottom_bar_background"
                android:orientation="vertical"
                android:paddingTop="16dp"
                android:paddingBottom="20dp"
                app:layout_constraintHorizontal_bias="0.5">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="16dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/prev_textView"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginStart="4dp"
                        android:layout_weight="1"
                        android:gravity="center_vertical"
                        android:text="Prev"
                        android:textColor="@color/text"
                        android:textSize="16dp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

    </ScrollView>

</android.support.constraint.ConstraintLayout>