<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/constraint_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <com.jaygoo.widget.VerticalRangeSeekBar
        android:id="@+id/sb_left_start"
        android:layout_width="80dp"
        android:layout_height="280dp"
        android:layout_marginVertical="10dp"
        android:layout_marginStart="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rsb_gravity="bottom"
        app:rsb_indicator_height="wrap_content"
        app:rsb_indicator_padding_bottom="10dp"
        app:rsb_indicator_padding_left="10dp"
        app:rsb_indicator_padding_right="10dp"
        app:rsb_indicator_padding_top="10dp"
        app:rsb_indicator_show_mode="showWhenTouch"
        app:rsb_indicator_width="wrap_content"
        app:rsb_mode="range"
        app:rsb_orientation="right"
        app:rsb_progress_color="@color/colorAccent"
        app:rsb_progress_default_color="@color/rsbColorSeekBarDefault"
        app:rsb_thumb_height="15dp"
        app:rsb_thumb_width="15dp"
        app:rsb_tick_mark_mode="number" />

    <com.jaygoo.widget.VerticalRangeSeekBar
        android:id="@+id/sb_right_start"
        android:layout_width="80dp"
        android:layout_height="280dp"
        android:layout_marginVertical="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rsb_gravity="bottom"
        app:rsb_indicator_height="wrap_content"
        app:rsb_indicator_padding_bottom="10dp"
        app:rsb_indicator_padding_left="10dp"
        app:rsb_indicator_padding_right="10dp"
        app:rsb_indicator_padding_top="10dp"
        app:rsb_indicator_show_mode="showWhenTouch"
        app:rsb_indicator_width="wrap_content"
        app:rsb_mode="range"
        app:rsb_orientation="right"
        app:rsb_progress_color="@color/colorAccent"
        app:rsb_progress_default_color="@color/rsbColorSeekBarDefault"
        app:rsb_thumb_height="15dp"
        app:rsb_thumb_width="15dp"
        app:rsb_tick_mark_mode="number" />

</androidx.constraintlayout.widget.ConstraintLayout>