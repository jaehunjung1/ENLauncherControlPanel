<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:focusableInTouchMode="true"
    tools:context=".controlpanel.DataFilteringFragment">

    <ScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/linear_Layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:weightSum="12"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <com.alespero.expandablecardview.ExpandableCardView
                android:id="@+id/data_filter_card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:title="Data Filtering"
                app:inner_view="@layout/datafilter_card_view"
                app:expandOnClick="true"
                app:animationDuration="200"
                app:startExpanded="false"/>

            <com.alespero.expandablecardview.ExpandableCardView
                android:id="@+id/enhancement_card_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:title="Enhancement Saturation"
                app:inner_view="@layout/enhancement_card_view"
                app:expandOnClick="true"
                app:animationDuration="200"
                app:startExpanded="false"/>
        </LinearLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>